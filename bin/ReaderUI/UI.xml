<?xml version="1.0" encoding="UTF-8"?>
<Window size="1280,720" mininfo="600,400" caption="0,0,0,32" sizebox="4,4,4,4"> <!-- 窗口的初始尺寸(宽800，高600)、窗口的最小尺寸(宽600，高400)、标题栏拖拽区域(高32)、可拖拽边框大小(sizebox拖拽边框大小) -->
    <VerticalLayout bkcolor="#FFF0F0F0" bkcolor2="#FFAAAAA0" > <!-- 整个窗口的背景色 -->
        <!-- 标题栏区 -->
        <HorizontalLayout height="28" bkcolor="#FFE6E6DC" bkcolor2="#FFAAAAA0"> <!-- 标题栏背景色 bkcolor、bkcolor2、bkcolor3分别是渐变色的三个值-->         
            <VerticalLayout width="25"> <!-- 图标-->
                <Button name="V_ICON"  float="true" pos="5,5,22,24"  width="18" normalimage=" file='Skin\ico.png' "  pushedimage=" file='Skin\ico.png' "/>
            </VerticalLayout>     
			
			<VerticalLayout inset="4,5,0,0">
                <Label text="YzACG百科站 WikiReader" width="200" height="18" textcolor="#0000000" disabledtextcolor="#FFA7A6AA" align="left" valign="center" />
            </VerticalLayout>
			
            <VerticalLayout width="93"> <!-- 右边三个控件所占的宽度-->
                <Button name="minbtn"   tooltip="最小化" float="true"					 pos="0,3,30,25"  width="30" normalimage=" file='Skin\MinNormal.bmp' " hotimage=" file='Skin\MinFocus.bmp' " pushedimage=" file='Skin\MinFocus.bmp' "/>
                <Button name="maxbtn"   tooltip="最大化" float="true" 					 pos="29,3,59,25" width="30" normalimage=" file='Skin\MaxNormal.bmp' " hotimage=" file='Skin\MaxFocus.bmp' " pushedimage=" file='Skin\MaxFocus.bmp' " />
                <Button name="restorebtn" visible="false" tooltip="还原" float="true"	 pos="29,3,59,25" width="30" normalimage=" file='Skin\StoreNormal.bmp' " hotimage=" file='Skin\StoreFocus.bmp' " pushedimage=" file='Skin\StoreFocus.bmp' " />
                <Button name="ui_btn_close" tooltip="关闭"   float="true"					 pos="58,3,89,25" width="30" normalimage=" file='Skin\CloseNormal.bmp' " hotimage=" file='Skin\CloseFocus.bmp' " pushedimage=" file='Skin\CloseFocus.bmp' "/>
            </VerticalLayout>      
        </HorizontalLayout>
        
        <!-- 搜索区 -->
        <HorizontalLayout height="31" bkimage="Skin\Main-Tab.png" bkcolor="#FFFFFBF0">
			<VerticalLayout >
				<HorizontalLayout name="ui_hl_urltabs">
				</HorizontalLayout>
			</VerticalLayout><!-- 占空使下面的元素靠右-->
			<VerticalLayout width="340">
				<HorizontalLayout height="31">
					<Combo name="ui_combo_search" tooltip="选择搜索类别" width="60" height="24" padding="6,6,0,0" normalimage="file='Skin\combo1.png'" hotimage="file='Skin\combo2.png' " pushedimage="file='Skin\combo3.png' " >
						<ListLabelElement text=" 词条" selected="true" />
						<ListLabelElement text=" 用户" />
						<ListLabelElement text=" 分类" />
						<ListLabelElement text=" 模板" />
						<ListLabelElement text=" 站务" />
						<ListLabelElement text=" 模拟器" />
					</Combo>  
					<Edit name="ui_et_search" tooltip="搜索" width="240" height="24" padding="6,6,0,0" bkimage="Skin\Search-Tab.png" bkcolor="#FFD8D8D8" textpadding="2,0,0,0" textcolor="#FF000000" disabledtextcolor="#FFA7A6AA"  nativebkcolor="#FFD8D8D8" />
					<Button name="ui_btn_search"  tooltip="点击搜索" width="18" height="18" padding="5,10,0,0" textcolor="#FF000000" disabledtextcolor="#FFA7A6AA" align="center" valign="center" normalimage=" file='Skin\search_icon.png' " hotimage=" file='Skin\search_icon_hover.png' " pushedimage=" file='Skin\search_icon_push.png' " />
				</HorizontalLayout>
			</VerticalLayout> 
        </HorizontalLayout>
		
		<HorizontalLayout height="5" bkimage="Skin\Main-Tab.png" bkcolor="#FFFFFBF0">
			<VerticalLayout >
				<Progress name="ui_progress_load" text="" padding="0,0,0,0"  height="5" foreimage="Skin/proc.png" min="0" max="100" value="0" hor="true" align="center" />
			</VerticalLayout>
		</HorizontalLayout>
		
		
		 <!-- 页面区 -->
        <HorizontalLayout inset="2,0,2,2"><!-- inset预留空间防止拉伸冲突 -->
            <CEFWebReader height="0" name="CEF_PAGE" size="0, 0" width="0" />
        </HorizontalLayout>
		

		
		
		
    </VerticalLayout>
</Window>